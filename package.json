{
  "name": "clickup",
  "version": "1.0.0",
  "repository": "https://github.com/wolfetti/clickup-snap.git",
  "description": "This is a simple electron container for official ClickUp web application: https://app.clickup.com",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dist": "rm -rf dist/ && electron-builder --linux snap"
  },
  "keywords": [],
  "author": "Wolfetti",
  "license": "MIT",
  "devDependencies": {
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "clickup",
    "snap": {
      "category": "Development",
      "confinement": "strict",
      "grade": "devel",
      "summary": "Simple ClickUp web application wrapper",
      "synopsis": "Simple ClickUp web application wrapper",
      "plugs": [
        "browser-sandbox"
      ],
      "desktop": [
        "Encoding=UTF-8",
        "Name=ClickUp",
        "Comment=Simple ClickUp web application wrapper",
        "Categories=Development",
        "Type=Application",
        "Terminal=0"
      ]
    },
    "linux": {
      "icon": "src/img/clickup-logo-gradient.png",
      "target": [
        "snap"
      ]
    }
  }
}
